<Layouts.app
  flash={@flash}
  current_scope={@current_scope}
  current_path={@conn.request_path}
  cart_count={@cart_count}
  cart_subtotal={@cart_subtotal}
  notification_count={@notification_count}
>
  <:admin_bar>
    <.button href={~p"/admin/locations"} variant="secondary">
      Back to Locations
    </.button>
    <.button href={~p"/admin/locations/#{@location.slug}"} variant="secondary">
      View Location
    </.button>
  </:admin_bar>

  <.title>
    <h1>Edit Location</h1>
  </.title>

  <div class="admin-container">
    <._form changeset={@changeset} action={~p"/admin/locations/#{@location.slug}"} />
  </div>
</Layouts.app>
